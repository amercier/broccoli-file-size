{
  "name": "broccoli-file-size",
  "version": "2.0.2",
  "description": "Broccoli plugin to display file sizes.",
  "license": "MIT",
  "repository": "amercier/broccoli-file-size",
  "author": {
    "name": "Alex Mercier",
    "email": "pro.alexandre.mercier@gmail.com",
    "url": "amercier.com"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "prepublish": "npm run transpile",
    "transpile": "rm -rf dist && babel src -d dist",
    "doc": "rm -rf esdoc && esdoc -c esdoc.json",
    "lint": "eslint .",
    "test": "npm run lint && npm run doc && rm -rf coverage && istanbul cover _mocha -- specs --compilers js:babel-register",
    "start": "npm run lint && npm run doc && mocha specs --compilers js:babel-register --watch --growl"
  },
  "main": "dist/index.js",
  "keywords": [
    "broccoli-plugin",
    "broccoli",
    "filesize",
    "file",
    "size",
    "weight",
    "gzip",
    "gzipped",
    "javascript"
  ],
  "dependencies": {
    "bluebird": "^3.1.1",
    "broccoli-plugin": "^1.2.1",
    "chalk": "^1.1.2",
    "filesize": "^3.1.3",
    "lodash": "^4.5.0",
    "rimraf": "^2.5.2",
    "symlink-or-copy": "^1.0.1",
    "walk": "^2.3.9"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.2",
    "broccoli": "^0.16.5",
    "buffer-equal": "1.0.0",
    "codeclimate-test-reporter": "^0.3.1",
    "codecov": "^1.0.1",
    "esdoc": "^0.4.5",
    "eslint": "^2.5.0",
    "eslint-config-airbnb": "^6.0.1",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.2.5"
  }
}
